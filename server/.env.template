# Backend Environment Variables
# Rename this file to .env for local development

# Node environment
NODE_ENV=development


MONGO_URI=mongodb://localhost:27017/farmtastic

# JWT configuration - Replace these with your own secure random strings
JWT_SECRET=replace_with_your_own_generated_secret
JWT_EXPIRE=1h
REFRESH_TOKEN_SECRET=replace_with_your_own_generated_secret
REFRESH_TOKEN_EXPIRE=3d

# Frontend URL for CORS
CLIENT_URL=http://localhost:5173

# Server port
PORT=5000